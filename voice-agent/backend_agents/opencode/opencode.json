{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "coding-toolkit": {
      "type": "local",
      "command": ["uvx", "--from", "cased-kit", "kit-dev-mcp"],
      "enabled": true,
      "environment": {}
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/projects/"
      ],
      "enabled": true,
      "environment": {}
    },
    "task-manager": {
      "type": "local",
      "command": ["node", "/Users/kundb/mcp-shrimp-task-manager/dist/index.js"],
      "enabled": true,
      "environment": {
        "DATA_DIR": "/Users/kundb/mcp-shrimp-task-manager/shrimp_data",
        "ENABLE_GUI": "false",
        "TEMPLATES_USE": "en"
      }
    },
    "web-browser-automation": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
      "environment": {}
    }
  }
}
