# Computer Provider Configuration
# Set to "e2b" or "cua" to choose the virtual computer provider
COMPUTER_PROVIDER=e2b

# E2B Configuration
E2B_API_KEY=your_e2b_api_key_here
E2B_DESKTOP_TEMPLATE_ID=nirmanus-e2b-goose

# CUA.ai Configuration
CUA_API_KEY=your_cua_api_key_here  # Optional for Docker, required for cloud
CUA_DOCKER_IMAGE=nirmanus-computer-agent

# OpenRouter Configuration (required for Goose)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Memory Server Configuration
MCP_SERVER_URL=http://localhost:8000
NIRMANUS_API_KEY=your_nirmanus_api_key_here

# Bifrost Gateway
BIFROST_URL="http://localhost:8080/v1"
WEB_URL="http://localhost:3000"


# Goose Configuration
GOOSE_USER_ID=your_user_id_here
